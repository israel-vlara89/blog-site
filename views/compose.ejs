<%- include("partials/header") -%>
<h1>Compose</h1>
<form class="" method="post" action="/compose">
    <div class="form-group">
        <label for="title">Title:</label>
        <input class="form-control" type="text" name="title" autocomplete="off" placeholder="Title" id="title">
    </div>
    <div class="form-group">
        <label for="comment">Post:</label>
        <textarea class="form-control" rows="5" id="comment" name="post"></textarea>
    </div>    
    <button class="btn btn-primary" type="submit" name="button">Publish</button>
</form>
<%- include("partials/footer") -%>